<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.StartFragment"
    android:orientation="vertical"
    android:weightSum="9"
    android:padding="10dp"
    android:background="@drawable/tic_tac">



    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_weight="3" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center">



        <RadioButton
            android:fontFamily="@font/genshin"
            android:id="@+id/r_with_computer"
            android:layout_width="wrap_content"
            android:textColor="#800080"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="PLAYER VS. COMPUTER"
            android:textSize="20sp"/>
        <RadioButton
            android:fontFamily="@font/genshin"
            android:id="@+id/r_2_player"
            android:textColor="#800080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER VS. PLAYER"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </RadioGroup>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   start   "
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/drip"/>




</LinearLayout>
